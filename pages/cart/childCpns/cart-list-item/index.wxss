

.cart-list-item{
  display: flex;
  padding: 20rpx;
  /* align-items: center; */
  border: 1px solid #F7F6F7;
}

.item-icon{
  display: flex;
  height: 200rpx;
  width: 60rpx;
  /* text-align: center; */
  align-items: center;
}

.item-img {
  width: 200rpx;
}

.item-img image {
  width: 180rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.item-info {
  flex: 1;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-info .title{
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: #2B1D30;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-info .desc{
  max-height: 78rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #B5ADB8;
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap; */
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

.item-info .price-count{
  /* margin-top: 20rpx; */
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.price-count .price{
  color: #FF699C;
  font-size: 32rpx;
}
.price-count .count{
  color: #2B1D30;
  font-size: 28rpx;
}
