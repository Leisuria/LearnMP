/* pages/cart/childCpns/w-param-info/index.wxss */
.param-info {
  padding: 30rpx 30rpx;
  font-size: 30rpx;
  border-bottom: 20rpx solid #F7F6F7;
}

.header {
  text-align: center;
  margin: 40rpx 0;
}
.header .title{
  font-size: 28rpx;
  /* font-weight: 800; */
  color: #B5ADB8;
  padding: 20rpx 0;
}

.row {
  display: flex;
  height: 84rpx;
  line-height: 84rpx; 
  border-bottom: 1px solid #F7F6F7;
}

.size-item {
  flex: 1;
  /* margin-right: 60rpx; */
  color: #2B1D30;
}

.info-row {
  display: flex;
}

.info-row .key {
  width: 120rpx;
  color: #2B1D30;
}

.info-row .value {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #FF699C;
}
